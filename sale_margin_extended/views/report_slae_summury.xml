<?xml version="1.0" encoding="utf-8"?>
<!--Custom report-->
<openerp>
<data>
    <template id="report_slae_summury">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="row">
                   <h2>
                        <span>Slae Summury</span>
                    </h2>
                </div>
                <div class="row mt32 mb32" id="informations">
                    <div class="col-xs-3">
                        <strong >Date From:</strong>
                        <p t-raw="data['form']['date_from']"/>
                    </div>
                    <div class="col-xs-3">
                        <strong >Date To:</strong>
                        <p t-raw="data['form']['date_to']"/>
                    </div>
                </div>
                <div class="row mt32 mb32" id="informations">
                    <div t-if="data['form']['user_id']" class="col-xs-3">
                        <strong>Salesperson:</strong>
                        <p t-raw="data['form']['user_id'][1]"/>
                    </div>
                </div>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th class="text-center">Customer Name</th>
                            <th class="text-center">Sale Order ID</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="total_sales" t-value="0"/>
                        <t t-set="get_sales" t-value="get_sale_order_line(data)"/>
                        <tr t-foreach="get_sales['sale_order']" t-as="l">
                            <td>
                               <span t-esc="l['no']"/>
                            </td>
                            <td class="text-center">
                               <span t-esc="l['customer']"/>
                            </td>
                            <td class="text-center">
                               <span t-esc="l['sale_order_id']"/>
                            </td>
                            <t t-debug="pdb"/>
                            <td class="text-right">
                               <span t-esc="l['total']" t-esc-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                            <t t-set="total_sales" t-value="total_sales+l['total']"/> 
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Total Sales</strong></td>
                                <td class="text-right">
                                    <t t-esc="total_sales"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                   <h2>
                        <span>Total Outgoing Products</span>
                    </h2>
                </div>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Qty</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="total_sales_line" t-value="0"/>
                        <tr t-foreach="get_sales['sale_order_line']" t-as="l">
                            <td>
                               <span t-esc="l['no']"/>
                            </td>
                            <td class="text-center">
                               <span t-esc="l['name']"/>
                            </td>
                            <td class="text-center">
                               <span t-esc="l['qty']"/>
                            </td>
                            <td class="text-right">
                               <span t-esc="l['total']"/>
                            </td>
                            <t t-set="total_sales_line" t-value="total_sales_line+l['total']"/>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Total products</strong></td>
                                <td class="text-right">
                                    <t t-esc="total_sales_line"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</data>
</openerp>